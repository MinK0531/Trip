<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mink.trip.user.repository.UserRepository">
    <insert id="insertUser" parameterType="map">
        INSERT INTO
            `user`
        (
          `signin_id`
        , `password`
        , `name`
        , `email`
        )VALUES
            (
              #{signinId}
            ,#{password}
            ,#{name}
            ,#{email}

            )
    </insert>
    <select id="countBySigninId" parameterType="string" resultType="int">
        SELECT
            COUNT(*)
        FROM
            `user`
        WHERE
            `signin_id` = #{signinId}
    </select>
</mapper>